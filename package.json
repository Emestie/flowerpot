{
    "name": "flowerpot",
    "version": "0.3.1",
    "description": "TFS/Azure work items watch tool",
    "author": {
        "name": "Valery Murashko",
        "url": "https://github.com/Emestie"
    },
    "homepage": ".",
    "main": "public/electron.js",
    "build": {
        "productName": "Flowerpot",
        "appId": "mst.flowerpot",
        "copyright": "Copyright Â© 2019 ${author}",
        "files": [
            "_icons/**/*",
            "build/**/*"
        ],
        "win": {
            "icon": "build/favicon.ico"
        },
        "mac": {
            "icon": "build/macicon.icns",
            "category": "public.app-category.utilities"
        },
        "publish": {
            "provider": "github"
        }
    },
    "dependencies": {
        "@trodi/electron-splashscreen": "^0.3.4",
        "cyrillic-to-translit-js": "^3.1.0",
        "electron-is-dev": "^1.2.0",
        "electron-updater": "^4.3.9"
    },
    "devDependencies": {
        "@types/jest": "*",
        "@types/node": "*",
        "@types/preval.macro": "^3.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/redux-logger": "^3.0.9",
        "electron": "^11.5.0",
        "electron-builder": "^22.11.7",
        "foreman": "^3.0.1",
        "node-sass": "^6.0.1",
        "preval.macro": "^3.0.0",
        "react": "^17.0.2",
        "react-contextmenu": "^2.14.0",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.5",
        "react-scripts": "^4.0.0",
        "redux": "^4.1.1",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.3.0",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^0.88.2",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "dev": "nf start",
        "start": "react-scripts start",
        "electron": "electron .",
        "build-react": "react-scripts build && node ./node-scripts/post-react-build.js",
        "build-electron": "npm run build-react && electron-builder -mw --publish never",
        "deploy-react": "npm run build-react && firebase deploy",
        "deploy-electron": "npm run build-react && electron-builder -mw --publish always"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
