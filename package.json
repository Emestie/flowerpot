{
    "name": "flowerpot",
    "displayName": "Flowerpot",
    "version": "0.5.1",
    "description": "TFS/Azure work items watch tool",
    "author": {
        "name": "Valery Murashko",
        "url": "https://github.com/Emestie"
    },
    "repository": {
        "url": "https://github.com/Emestie/flowerpot/"
    },
    "license": "MIT",
    "engines": {
        "node": ">=v16.13",
        "npm": ">=8.1"
    },
    "main": "host/main/dist/index.cjs",
    "extendInfo": {
        "NSAppTransportSecurity": {
            "NSAllowsArbitraryLoads": true
        }
    },
    "dependencies": {
        "@trodi/electron-splashscreen": "^0.3.4",
        "cyrillic-to-translit-js": "3.1.0",
        "electron-updater": "^4.6.5",
        "markdown-to-jsx": "^7.1.8",
        "moment": "^2.29.4"
    },
    "devDependencies": {
        "@babel/core": "^7.20.5",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.8",
        "@types/react": "^17.0.52",
        "@types/react-dom": "^17.0.18",
        "@types/redux-logger": "^3.0.9",
        "@vitejs/plugin-react": "^3.0.0",
        "cross-env": "^7.0.3",
        "electron": "22.0.0",
        "electron-builder": "23.6.0",
        "prettier": "^2.8.1",
        "react": "^17.0.2",
        "react-contextmenu": "^2.14.0",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.9",
        "redux": "^4.2.0",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.4.2",
        "sass": "^1.56.2",
        "semantic-ui-css": "^2.5.0",
        "semantic-ui-react": "^0.88.2",
        "typescript": "^4.9.4",
        "unplugin-auto-expose": "0.0.2",
        "vite": "^4.0.0"
    },
    "scripts": {
        "dev": "tsc && node scripts/watch.js",
        "build": "npm run build:main && npm run build:preload && npm run build:renderer",
        "build:main": "cd ./host/main && tsc && vite build",
        "build:preload": "cd ./host/preload && tsc && vite build",
        "build:renderer": "tsc && vite build",
        "compile": "cross-env MODE=production npm run build && electron-builder build -mw --x64 --publish never --config .electron-builder.config.js",
        "deploy": "cross-env MODE=production npm run build && electron-builder -mw --x64 --publish always --config .electron-builder.config.js",
        "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 npx --no-install electron ./scripts/update-electron-vendors.js ",
        "prettify": "prettier --write \"./**/*.{js,jsx,json,ts,tsx}\""
    },
    "eslintConfig": {
        "extends": "react-app"
    }
}